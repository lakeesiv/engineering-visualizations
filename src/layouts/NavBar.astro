---
import { Icon } from "astro-icon";
---

<nav class="bg-b-800">
  <div class="mx-auto max-w-7xl px-2 sm:px-4 lg:px-8">
    <div class="relative flex h-16 items-center justify-between">
      <div class="flex items-center px-2 lg:px-0 w-full">
        <div class="flex-shrink-0">
          <a
            href="https://www.lakeesiv.com/"
            class="rounded-md px-3 py-2 text-sm hover:text-gray-300 bg-red-800 hover:bg-red-700 transition-colors duration-500 text-white"
            >Lakee Sivaraya</a
          >
        </div>
        <a
          href="/freq-response"
          class="rounded-md px-3 py-2 transition-colors duration-500 text-sm font-medium text-white ml-4 hover:text-gray-300 bg-b-900 border-2 border-gray-800 border-opacity-90 hover:border-opacity-100"
          >Z Frequency Response</a
        >
        <div class="justify-self-end ml-auto">
          <div class="flex space-x-4">
            <a href="https://github.com/lakeesiv/engineering-visualizations">
              <Icon name="mdi:github" class="w-8" />
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</nav>
<div class="w-full py-3 sm:block md:hidden">
  <div class="mx-auto max-w-7xl px-2 sm:px-6 lg:px-8">
    <div
      class="rounded-lg bg-b-800 border-2 border-red-800 p-2 shadow-lg sm:p-3"
    >
      <div class="flex flex-wrap items-center justify-between">
        <div class="flex w-0 flex-1 items-center">
          <span class="flex rounded-lg bg-b-900 p-2">
            <Icon name="mdi:alert" class="w-8 text-red-700" />
          </span>
          <p class="ml-3 font-medium text-white">
            Note this website is not optimized for small screens
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
